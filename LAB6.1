void newswap(vector<string>& lines, int i) {
    int n = lines.size();
    if (i == n) {
        count++;
        output << count << ":";
        for (string line : lines) {
            output << " " << line;
        }
        output << endl;
        return;
    }

    for (int j = i; j <= n - 1; j++) {
        swap(lines[i], lines[j]);
        newswap(lines, i + 1);
        swap(lines[i], lines[j]);
    }
}

void processFile(const string& filename, int testNumber) {
    ifstream input(filename);
    if (input.is_open() && output.is_open()) {
        vector<string> lines;
        string word;

        while (getline(input, word)) {
            if (!word.empty()) {
                if (word.back() == '\r') word.pop_back();
                lines.push_back(word);
            }
        }

        output << "Тест " << testNumber << ":\n";
        count = 0;
        newswap(lines, 0);
    }
    input.close();
}

