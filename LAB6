#include <iostream>
#include <fstream>
#include <string>
#include <vector>

using namespace std;

ofstream output("C:/Users/209-3/Desktop/DLETEAFTER/out1.txt");
int counter = 0;

void perestavit(vector<string>& lines, int i) {
    int n = lines.size();
    if (i == n) {
        counter++;
        output << counter << ":";
        for (string line : lines) {
            output << " " << line;
        }
        output << endl;
        return;
    }

    for (int j = i; j <= n - 1; j++) {
        swap(lines[i], lines[j]);
        perestavit(lines, i + 1);
        swap(lines[i], lines[j]);
    }
}

void processFile(const string& filename, int testNumber) {
    ifstream input(filename);
    if (input.is_open() && output.is_open()) {
        vector<string> lines;
        string word;

        while (getline(input, word)) {
            if (!word.empty()) {
                if (word.back() == '\r') word.pop_back();
                lines.push_back(word);
            }
        }

        output << "Тест " << testNumber << ":\n";
        counter = 0;
        perestavit(lines, 0);
    }
    input.close();
}

int main() {
    processFile("C:/Users/209-3/Desktop/DLETEAFTER/1.1.txt", 1);
    processFile("C:/Users/209-3/Desktop/DLETEAFTER/1.2.txt", 2);
    processFile("C:/Users/209-3/Desktop/DLETEAFTER/1.3.txt", 3);

    ifstream file("C:/Users/209-3/Desktop/DLETEAFTER/out1.txt"); string line;
    while (getline(file, line)){
        cout << line << "\n";
    }

    file.close();
    output.close();
    return 0;
}
